{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-white">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1 class="display-4 py-2 text-truncate">Please register</h1>
                    <div class="px-2">
                        <form method="post" class="justify-content-center">
                             {% if error is defined %}
                                {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                            {% endif %}
                            <div class="row">
                                <div class="col" id="firstname">
                                    {{ form_row(form.firstname) }}
                                </div>
                                <div class="col" id="name">
                                    {{ form_row(form.name) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col" id="alias">
                                    {{ form_row(form.alias) }}
                                </div>
                            </div>    
                            <div class="row">
                                <div class="col" id="email">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                                <div class="row">
                                <div class="col" id="password">
                                    {{ form_row(form.password) }}
                                </div>
                            </div>
                            {{ form_row(form._token) }}                                         
                            <button class="btn btn-primary" type="submit">Get registered!</button>             
                            <a href="{{ path('app_login') }}" class="btn btn-outline-primary" role="button">Back to login</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
